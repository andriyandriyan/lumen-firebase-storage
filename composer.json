{
    "name": "andriyandriyan/lumen-firebase-storage",
    "description": "Using Firebase Storage in Lumen.",
    "keywords": ["firebase", "storage", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Andriy",
            "email": "andriy.andriyan1@gmail.com",
            "homepage": "https://andriyandriyan.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "laravel/lumen-framework": "5.8.*",
        "league/flysystem": "^1.0",
        "superbalist/laravel-google-cloud-storage": "^2.2"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
